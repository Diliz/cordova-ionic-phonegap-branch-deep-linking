<?xml version='1.0' encoding='utf-8'?>
<widget id="io.branch.cordova.test.project" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A testing harness that uploads jasmine test results to a local server.
    </description>
    <author email="amit@bansil.org" href="https://www.linkedin.com/in/amitbansil">
       Amit Bansil
    </author>
    <content src="cdvtests/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="io.branch.sdk-tests" spec="../../branch-cordova/tests" />
    <plugin name="cordova-plugin-test-framework" spec="http://git-wip-us.apache.org/repos/asf/cordova-plugin-test-framework.git" />
    <engine name="android" spec="~5.2.1" />
    <engine name="ios" spec="~4.2.0" />
    <plugin name="io.branch.sdk" spec="../../branch-cordova">
        <variable name="BRANCH_KEY" value="key_live_agl5WIycmYGmaquXWgXBDldgzCm30vXC" />
        <variable name="URI_SCHEME" value="amit" />
    </plugin>
</widget>
